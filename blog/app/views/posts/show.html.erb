<h1>The show posts Page</h1>

<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<% if @post.user_id == session[:user_id] %>
<%= link_to "Edit your post", edit_post_path(@post) %>
<%= link_to "Delete your post", @post, method: :delete, data: { confirm: "Are you sure?"} %>
<%end%>
<p>Comments:</p>
<% @post.comments.reverse.each do |comment|%>

<p><%=comment.user.username%> said: <%= comment.body %></p>
<% end %>
<%=link_to 'Leave a comment', new_comment_path(post_id: @post.id)%>
