<%=form_for(@post) do |f|%>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Type a post title here" %><br>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "60x12", placeholder:  "What is on your mind?" %><br>

    <%= f.button :submit, :class =>"waves-effect waves-light btn" %>
<%end%>